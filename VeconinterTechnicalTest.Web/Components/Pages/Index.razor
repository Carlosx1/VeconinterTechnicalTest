@page "/blazor"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Inicio - Blazor</PageTitle>

<div class="hero-section">
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary mb-3">
            <i class="fas fa-rocket"></i> Bienvenido a Blazor Server
        </h1>
        <p class="lead">Versión interactiva del sistema de gestión de clientes</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 border-primary">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Gestión de Clientes</h5>
                    <p class="card-text">Interfaz interactiva para administrar clientes con componentes Blazor</p>
                    <a href="/blazor/clients" class="btn btn-primary">
                        <i class="fas fa-eye"></i> Ver Clientes Blazor
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card h-100 border-success">
                <div class="card-body text-center">
                    <i class="fas fa-code fa-3x text-success mb-3"></i>
                    <h5 class="card-title">MVC Tradicional</h5>
                    <p class="card-text">Versión clásica con vistas Razor y controladores MVC</p>
                    <a href="/Client" class="btn btn-success">
                        <i class="fas fa-eye"></i> Ver Clientes MVC
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        padding: 2rem 0;
    }
    
    .card {
        transition: transform 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }
</style>