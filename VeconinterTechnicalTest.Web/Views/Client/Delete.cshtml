@page
@model VeconinterTechnicalTest.Application.DTOs.ClientDto
@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Eliminar Cliente</h2>

<div class="alert alert-danger">
    <strong>¿Está seguro que desea eliminar este cliente?</strong>
    <p>Esta acción eliminará permanentemente el cliente y todos sus subclientes asociados.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Nombre:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    
                    <dt class="col-sm-4">Teléfono:</dt>
                    <dd class="col-sm-8">@Model.Phone</dd>
                    
                    <dt class="col-sm-4">Empresa:</dt>
                    <dd class="col-sm-8">@Model.Company</dd>
                    
                    <dt class="col-sm-4">SubClientes:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-danger">@Model.SubClients.Count</span>
                        @if (Model.SubClients.Count > 0)
                        {
                            <small class="text-muted">(también serán eliminados)</small>
                        }
                    </dd>
                </dl>
                
                <form asp-action="Delete" method="post" class="mt-4">
                    <input asp-for="Id" type="hidden" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Confirmar Eliminación
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
