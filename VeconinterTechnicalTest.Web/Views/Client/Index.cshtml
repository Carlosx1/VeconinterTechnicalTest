@model IEnumerable<VeconinterTechnicalTest.Application.DTOs.ClientDto>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fa fa-building"></i> Lista de Clientes</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="fa fa-plus"></i> Nuevo Cliente
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fa fa-info-circle"></i>
        <h5>No hay clientes registrados</h5>
        <p>Comienza agregando tu primer cliente.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus"></i> Crear Primer Cliente
        </a>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Tel√©fono</th>
                            <th>Empresa</th>
                            <th>SubClientes</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@client.Name</strong>
                                </td>
                                <td>
                                    <i class="fa fa-envelope text-muted"></i>
                                    @client.Email
                                </td>
                                <td>
                                    <i class="fa fa-phone text-muted"></i>
                                    @client.Phone
                                </td>
                                <td>
                                    <i class="fa fa-building text-muted"></i>
                                    @client.Company
                                </td>
                                <td>
                                    <span class="badge bg-info">@client.SubClients.Count</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@client.Id" class="btn btn-sm btn-outline-primary" title="Ver Detalles">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@client.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@client.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}